{
  "openapi": "3.0.0",
  "info": {
    "title": "User Management API Documentation",
    "version": "1.0.0",
    "description": "User Management API Information"
  },
  "paths": {
    "/user/create": {
      "post": {
        "summary": "Create a new user",
        "description": "Creates a new user in the user-service.",
        "tags": ["User"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "authServiceUserId": {
                    "type": "string",
                    "example": "123456"
                  },
                  "userType": {
                    "type": "string",
                    "enum": ["ADMIN", "USER"],
                    "example": "USER"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "user@example.com"
                  },
                  "firstName": {
                    "type": "string",
                    "example": "John"
                  },
                  "lastName": {
                    "type": "string",
                    "example": "Doe"
                  },
                  "birthDate": {
                    "type": "string",
                    "format": "date",
                    "example": "1990-01-01"
                  },
                  "registerDate": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2024-12-07T12:00:00Z"
                  }
                },
                "required": [
                  "authServiceUserId",
                  "userType",
                  "email",
                  "firstName",
                  "lastName",
                  "birthDate",
                  "registerDate"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User successfully created.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Successfully registered the user."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request, required fields are missing.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Bad Request for User creation in user-service"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error during user creation.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Something went wrong for new user registration"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/all": {
      "get": {
        "summary": "Get all users",
        "description": "Fetches all users from the user-service.",
        "tags": ["User"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully fetched all users.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "users": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "authServiceUserId": {
                            "type": "string",
                            "example": "123456"
                          },
                          "userType": {
                            "type": "string",
                            "enum": ["ADMIN", "USER"],
                            "example": "USER"
                          },
                          "email": {
                            "type": "string",
                            "format": "email",
                            "example": "user@example.com"
                          },
                          "firstName": {
                            "type": "string",
                            "example": "John"
                          },
                          "lastName": {
                            "type": "string",
                            "example": "Doe"
                          },
                          "birthDate": {
                            "type": "string",
                            "format": "date",
                            "example": "1990-01-01"
                          },
                          "registerDate": {
                            "type": "string",
                            "format": "date-time",
                            "example": "2024-12-07T12:00:00Z"
                          }
                        },
                        "required": [
                          "authServiceUserId",
                          "userType",
                          "email",
                          "firstName",
                          "lastName",
                          "birthDate",
                          "registerDate"
                        ]
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized. Token is either missing or expired.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Bearer token required"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error while fetching users.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Something went wrong"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "summary": "Get user by ID",
        "description": "Fetches a specific user by their ID.",
        "tags": ["User"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the user to fetch",
            "schema": {
              "type": "string",
              "example": "605c72ef153207001f8e4e1"
            }
          }
        ],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully fetched the user.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "authServiceUserId": {
                      "type": "string",
                      "example": "123456"
                    },
                    "userType": {
                      "type": "string",
                      "enum": ["ADMIN", "USER"],
                      "example": "USER"
                    },
                    "email": {
                      "type": "string",
                      "format": "email",
                      "example": "user@example.com"
                    },
                    "firstName": {
                      "type": "string",
                      "example": "John"
                    },
                    "lastName": {
                      "type": "string",
                      "example": "Doe"
                    },
                    "birthDate": {
                      "type": "string",
                      "format": "date",
                      "example": "1990-01-01"
                    },
                    "registerDate": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2024-12-07T12:00:00Z"
                    }
                  },
                  "required": [
                    "authServiceUserId",
                    "userType",
                    "email",
                    "firstName",
                    "lastName",
                    "birthDate",
                    "registerDate"
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Invalid ID format",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Invalid ID format"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized. Token is either missing or expired.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Bearer token required"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found for the given ID.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User for given ID not found"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error while fetching the user.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Something went wrong"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update user by ID",
        "description": "Updates a specific user's details. The user must be authenticated via Bearer token.",
        "tags": ["User"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the user to update",
            "schema": {
              "type": "string",
              "example": "605c72ef153207001f8e4e1"
            }
          },
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "description": "Bearer token for authentication",
            "schema": {
              "type": "string",
              "example": "Bearer your-token-here"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phoneNumber": {
                    "type": "string",
                    "example": "+1234567890"
                  },
                  "district": {
                    "type": "string",
                    "example": "Central"
                  },
                  "city": {
                    "type": "string",
                    "example": "New York"
                  },
                  "address": {
                    "type": "string",
                    "example": "123 Main St"
                  },
                  "latitude": {
                    "type": "number",
                    "format": "float",
                    "example": 40.7128
                  },
                  "longitude": {
                    "type": "number",
                    "format": "float",
                    "example": -74.006
                  }
                },
                "required": [
                  "phoneNumber",
                  "district",
                  "city",
                  "address",
                  "latitude",
                  "longitude"
                ]
              }
            }
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully updated the user.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "authServiceUserId": {
                      "type": "string",
                      "example": "123456"
                    },
                    "userType": {
                      "type": "string",
                      "enum": ["ADMIN", "USER"],
                      "example": "USER"
                    },
                    "email": {
                      "type": "string",
                      "format": "email",
                      "example": "user@example.com"
                    },
                    "firstName": {
                      "type": "string",
                      "example": "John"
                    },
                    "lastName": {
                      "type": "string",
                      "example": "Doe"
                    },
                    "birthDate": {
                      "type": "string",
                      "format": "date",
                      "example": "1990-01-01"
                    },
                    "registerDate": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2024-12-07T12:00:00Z"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid ID format or bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Invalid ID format"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Authentication failed or missing token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Authentication failed"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found for the given ID",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User with given ID not found"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error while updating the user.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Something went wrong with user update"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete user by ID",
        "description": "Deletes a specific user based on the provided ID. The user must be authenticated via Bearer token.",
        "tags": ["User"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the user to delete",
            "schema": {
              "type": "string",
              "example": "605c72ef153207001f8e4e1"
            }
          },
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "description": "Bearer token for authentication",
            "schema": {
              "type": "string",
              "example": "Bearer your-token-here"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully deleted the user.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Resource deleted"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid ID format",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Invalid ID format"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Authentication failed or missing token",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Authentication failed"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found for the given ID",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User with given ID not found"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error while deleting the user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Something went wrong"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "authServiceUserId": { "type": "string" },
          "userType": { "type": "string" },
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "phoneNumber": { "type": "string" },
          "district": { "type": "string" },
          "city": { "type": "string" },
          "address": { "type": "string" },
          "latitude": { "type": "number" },
          "longitude": { "type": "number" },
          "birthDate": { "type": "string", "format": "date" },
          "registerDate": { "type": "string", "format": "date-time" }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
