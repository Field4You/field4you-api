{
  "openapi": "3.0.0",
  "info": {
    "title": "Posts API",
    "version": "1.0.0",
    "description": "API for creating, retrieving, and deleting posts."
  },
  "paths": {
    "/posts/create": {
      "post": {
        "summary": "Create a new post",
        "tags": ["Post"],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "comments": {
                    "type": "string",
                    "description": "Comments about the post."
                  },
                  "image": {
                    "type": "string",
                    "format": "binary",
                    "description": "Image file for the post."
                  }
                },
                "required": ["image"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully created the post.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/posts/last10": {
      "get": {
        "summary": "Get the last 10 posts",
        "tags": ["Post"],
        "responses": {
          "200": {
            "description": "A list of the last 10 posts.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/posts/{id}": {
      "delete": {
        "summary": "Delete a post by ID",
        "tags": ["Post"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the post to delete."
          }
        ],
        "responses": {
          "200": {
            "description": "Post deleted successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid ID format"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "Post": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier of the post."
          },
          "creatorId": {
            "type": "string",
            "description": "ID of the creator."
          },
          "creatorEmail": {
            "type": "string",
            "description": "Email of the creator."
          },
          "comments": {
            "type": "string",
            "description": "Comments about the post."
          },
          "imageName": {
            "type": "string",
            "description": "Name of the uploaded image file."
          },
          "imageURL": {
            "type": "string",
            "description": "URL of the uploaded image."
          },
          "creationDate": {
            "type": "string",
            "format": "date-time",
            "description": "Date when the post was created."
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
